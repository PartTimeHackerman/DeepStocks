<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss,SSS} %highlight{  %-5p [%t:%C{1}:%M:%L] - %m%n}"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="ALL">
            <AppenderRef ref="Console"/>
        </Root>
        <Logger name="scraper" level="OFF" additivity="false">
            <level value="OFF"/>
        </Logger>
    </Loggers>
</Configuration>
